<% standard_html_email_wrapper do %>
  <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="backgroundTable" style="margin: 0;padding: 0;background-color: #FAFAFA;height: 100%;width: 100%;">
    <tr>
      <td align="center" valign="top" style="border-collapse: collapse;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%" id="templateContainer" style="background-color: #ececec;">
          <tr>
            <td align="center" valign="top" style="border-collapse: collapse;">
              <!-- // Begin Template Header \ -->
              <table border="0" cellpadding="10" cellspacing="0" width="100%" id="templateHeader" style="background-color: #FFFFFF;border-bottom: 0;position: relative;">
                <tr>
                  <!-- // Begin Module: Standard Header Image \ -->
                  <td align="center" valign="middle" class="shelby-header-logo" style="border-collapse: collapse;background: #2c2c2c;color: #efefef;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 13px;font-weight: 300;width: 100px;">
                    <a href="<%= Settings::Email.web_url_base %>">
                      <img src="<%= Settings::Email.shelby_logo_gt %>" id="headerImage" alt="Shelby.tv logo" title="Shelby.tv" style="border: 0;height: auto;line-height: 100%;outline: none;text-decoration: none;margin: 0;width: 97px;vertical-align: bottom;">
                    </a>
                  </td>
                  <td align="right" valign="middle" class="shelby-header" style="border-collapse: collapse;background: #2c2c2c;color: #efefef;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 11px;font-weight: 300;">
                    <span id="headerSlogan" style="color: #aaa;line-height: 1.231;">
                      <%= Settings::Email.shelby_tagline %>
                    </span>
                  </td>
                  <!-- // End Module: Standard Header Image \ -->
                </tr>
              </table>
              <!-- // End Template Header \ -->
            </td>
          </tr>
          <tr>
            <td align="center" valign="top" style="border-collapse: collapse;">
              <!-- // Begin Template Body \ -->
              <table border="0" cellpadding="0" cellspacing="0" width="100%" id="templateBody">
                <tr>
                  <td valign="top" class="bodyContent" style="border-collapse: collapse;background-color: #ececec;">
                    <!-- // Begin Module: Standard Content \ -->
                    <table border="0" cellpadding="15" cellspacing="0" width="100%">

											<% @all_new_users.each do |u|  %>
												<% roll_followings = u.roll_followings.map {|rf| rf.roll_id }.compact.uniq || [] %>
												<% rolls = Roll.where({:id => { "$in" => roll_followings  }}).limit(roll_followings.length).all %>
												<% friends_rolls = rolls.select {|k,v| k.roll_type == 11 } || 0 %>
												<% watch_later_roll = rolls.select {|k,v| k.roll_type == 13 } || 0 %>
												<% upvoted_roll = rolls.select {|k,v| k.roll_type == 12 } || 0 %>
												<% public_rolls = rolls.select {|k,v| k.roll_type == 30 or k.roll_type == 31) } || 0 %>
												<% private_rolls = rolls.select {|k,v| k.roll_type == 50 } || 0 %>

												<% @tw_link, @fb_link, @tu_link = nil %>
												<% u.authentications.each do |a|
														@tw_link = "http://twitter.com/#{a.nickname}" if a.provider == "twitter"
														@fb_link = "http://www.facebook.com/#{a.nickname}" if a.provider == "facebook"
														@tu_link = "http://#{a.nickname}.tumblr.com/" if a.provider == "tumblr"
													end 
												%>
												
	                      <tr>
													<table border="0" cellspacing="0" cellpadding="0" width="100%">
														<tr>
															<td align="center" valign="top" class="shelby-notification-body" style="border-collapse: collapse;">
			                          <div style="color: #505050;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 13px;line-height: 100%;">
			                              <h4 class="h4" style="color: #666;display: block;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 100%;font-weight: normal;line-height: 100%;margin-top: 0.5em;margin-right: 0;margin-bottom: 4px;margin-left: 0;">
			                                <div class="shelby-avatar" style="background: transparent;display: inline-block;height: 40px;margin-right: .5em;overflow: hidden;width: 40px;vertical-align: middle;color: #505050;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 13px;line-height: 105%;">
			                                  <a href="<%= u.permalink %>" style="color: #777;font-weight: normal;text-decoration: underline;">
			                                    <img src="<%= u.user_image %>" alt="<%= u.nickname %>" title="<%= u.nickname %>" style="border: 0;height: 100%;line-height: 100%;outline: none;text-decoration: none;display: inline;">
			                                  </a>
			                                </div>
			                                <a href="<%= u.permalink %>" style="color: #777;font-weight: normal;text-decoration: underline;"><%= u.name %></a>: <a href="<%= watch_later_roll.permalink %>" style="color: #777;font-weight: normal;text-decoration: underline;">watch later roll</a>: <a href="<%= upvoted_roll.permalink %>" style="color: #777;font-weight: normal;text-decoration: underline;">heart roll</a>: (<%= u.faux == 0 ? "New" : "Converted Faux" %> User)
			                              </h4>
			                          </div>
			                        </td>
														</tr>
														<tr>
															<td align="center" valign="top" class="shelby-rolls-following" style="border-collapse: collapse;border-bottom: 1px solid #ddd;">
																<h4 class="h4" style="color: #666;display: block;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 100%;font-weight: normal;line-height: 100%;margin-top: 0.5em;margin-right: 0;margin-bottom: 5px;margin-left: 0;">
																	<span class="social-links">
																		<% if @tw_link %>
																			<a href="<%= @tw_link %>" style="color: #777;font-weight: normal;text-decoration: underline;">
																				<img src="https://twitter.com/images/resources/twitter-bird-white-on-blue.png" alt="" title="" style="border: 0;height: 12px;line-height: 100%;outline: none;text-decoration: none;display: inline;"/>
																			</a>
																		<% end %>
																		<% if @fb_link %>
																			<a href="<%= @tw_link %>" style="color: #777;font-weight: normal;text-decoration: underline;">
																				<img src="http://shelby.tv/images/assets/facebook.png" alt="" title="" style="border: 0;height: 12px;line-height: 100%;outline: none;text-decoration: none;display: inline; background-color: blue">
																			</a>
																		<% end %>
																		<% if @tu_link %>
																			<a href="<%= @tw_link %>" style="color: #777;font-weight: normal;text-decoration: underline;">
																				<img src="http://i20.photobucket.com/albums/b218/Sylphcat/TumblrLogoSmall.png" alt="" title="" style="border: 0;height: 12px;line-height: 100%;outline: none;text-decoration: none;display: inline; background-color: blue">
																			</a>
																		<% end %>
																	</span>
																	
																	/ Friends: <%= pluralize(friends_rolls.length - 1, 'Roll') %> / Public: <%= pluralize(public_rolls.length, 'Roll') %> / Private: <%= pluralize(private_rolls.length, 'Roll') %>
																</h4>
															</td>
														</tr>
													</table>
	                      </tr>
											<% end %>
											
                      <tr>
                        <td align="right" valign="middle" class="shelby-notification-footer" style="border-collapse: collapse;border-top: 1px solid #fff;color: #888;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 11px;line-height: 100%;text-align: right;">
                          <p class="shelby-footer-block" style="line-height: 1.5;margin: 0;">
                            <a href="<%= Settings::Email.preferences_link %>" style="color: #888;">Email settings</a>
                          </p>
                          <p class="shelby-footer-block" style="line-height: 1.5;margin: 0;">
                            <%= Settings::Email.shelby_address %>
                          </p>
                        </td>
                      </tr>
                    </table>
                    <!-- // End Module: Standard Content \ -->
                  </td>
                </tr>
              </table>
              <!-- // End Template Body \ -->
            </td>
          </tr>

        </table>
        <br>
      </td>
    </tr>
  </table>
<% end %>