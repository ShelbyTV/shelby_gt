<% frame = el %>
<% message = frame.conversation.messages[-1] %>

<tr>
  <td colspan="3">
    <table border="10" cellpadding="0" cellspacing="0" style="border:1px solid #ccc; border-radius: 5px; background-color: #F2F0F0; width: 100%;">
      <tr>
        <td valign="middle" style="text-align: left; width: 25px;">
          <img style="width:25px;height: 25px;" src="<%= message and message.user ? avatar_url_for_message(message) : "#{Settings::ShelbyAPI.web_root}/images/assets/avatar.png" %>" />
        </td>

        <td valign="middle" style="font-weight:bold; font-size:12px; color:#556; line-height: 1;text-align: left;">
          <%= frame.anonymous_creator_nickname or (frame.creator ? frame.creator.nickname : nil) %>
        </td>

        <td valign="middle" style="font-weight:normal; font-size:12px; color:#999; line-height: 1;text-align: right;">
          <%= frame.created_at.strftime("%A, %b %d, %l:%M %p") %>
        </td>
      </tr>

      <tr>
        <td colspan="3" valign="top">
          <a href="<%= @permalink %>">
            <img src="<%= frame.video.thumbnail_url %>" style="width: 100%;" title="<%= truncate(frame.video.title, :length => 75, :separator => ' ') %>" alt="<%= truncate(frame.video.title, :length => 75, :separator => ' ') %>" />
          </a>
        </td>
      </tr>
    </table>
  </td>
</tr>

