<% standard_html_email_wrapper do %>
  <!--  show message in email preview-->
  <div style="font-size:0px;display:none;">
    Check out <%= @user_from_name %>'s roll and let them know what you think of the video they are sharing on Shelby
  </div>
  <!-- end show message-->

  <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="backgroundTable" style="margin: 0;padding: 0;background-color: #FAFAFA;height: 100%;width: 100%;font-family:Arial,sans-serif;">
    <tr>
      <td align="center" valign="top" style="border-collapse: collapse;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%" id="templateContainer" style="background-color: #ececec;">
          <tr>
            <td align="center" valign="top" style="border-collapse: collapse;">
              <!-- // Begin Template Header \ -->
              <table border="0" cellpadding="10" cellspacing="0" width="100%" id="templateHeader" style="background-color: #FFFFFF;border-bottom: 0;position: relative;">
                <tr>
                  <!-- // Begin Module: Standard Header Image \ -->
                  <td valign="middle" class="shelby-email-lining" style="padding:0px;width:85%;min-width: 300px;">
										<h1 class="shelby-logo" style="margin:0px;padding:0 20px;background-color:#313435;">
											<a href="<%= Settings::Email.web_url_base %>">
												<img class="image_fix" src="<%= Settings::Email.shelby_logo %>" alt="Shelby.tv logo" title="Shelby.tv" height="30" style="padding:8px 0px 5px;display:block;margin: 0px auto;display:block;"/>
											</a>
										</h1>
                  </td>
                  <!-- // End Module: Standard Header Image \ -->
                </tr>
              </table>
              <!-- // End Template Header \ -->
            </td>
          </tr>
          <tr>
            <td align="center" valign="top" style="border-collapse: collapse;">
              <!-- // Begin Template Body \ -->
              <table border="0" cellpadding="0" cellspacing="0" width="100%" id="templateBody">
                <tr>
                  <td valign="top" class="bodyContent" style="border-collapse: collapse;background-color: #ececec;">
                    <!-- // Begin Module: Standard Content \ -->
                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                      <tr>
                        <td align="center" valign="top" class="shelby-notification-body" style="border-collapse: collapse; padding: 15px 15px 0 15px;">
                          <div style="color: #505050;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 14px;line-height: 150%;">
                              <h4 class="h4" style="color: #666;display: block;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 125%;font-weight: normal;line-height: 100%;margin-top: 0.5em;margin-right: 0;margin-bottom: 0;margin-left: 0;">
                                <div class="shelby-avatar" style="background: transparent;display: inline-block;height: 50px;margin-right: .5em;overflow: hidden;width: 50px;vertical-align: middle;color: #505050;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 14px;line-height: 150%;">
                                  <img class="image_fix" src="<%= @user_from.avatar_url %>" alt="user_image" alt="<%= @user_from_name %>" title="<%= @user_from_name %>" width="45" height="45" style="border: 0;height: 45px;line-height: 100%;outline: none;text-decoration: none;display: block;"/>
                                </div>
                                <%= @user_from_name %> accepted your invitation to join Shelby.tv
                              </h4>
                          </div>
                        </td>
                      </tr>
                      <tr>
                        <td align="center" valign="top" style="border-collapse: collapse; border-bottom: 1px solid #ddd; padding: 15px;">
                            <div style="width:278px">
                              <a href="<%= @user_permalink %>" style="text-decoration: none;color:#444; font-family: Ubuntu,Trebuchet MS,Helvetica,sans-serif; font-weight:300;">
                                <div style="height:27px; background-color: #0590c4; color: white;text-align: center;font-weight: bold;border: 1px solid #056083;padding-top: 9px;">
                                  Follow <%= @user_from_name %>'s roll
                                </div>
                              </a>
                          </div>
                        </td>
                      </tr>
                      <tr>
                        <td align="right" valign="middle" class="shelby-notification-footer" style="border-collapse: collapse;border-top: 1px solid #fff;color: #888;font-family: 'Ubuntu',Trebuchet MS,sans-serif;font-size: 11px;line-height: 100%;text-align: right;padding: 15px;">
                          <p class="shelby-footer-block" style="line-height: 1.5;margin: 0;">
                            <a href="<%= Settings::Email.preferences_link %>" style="color: #888;">Email settings</a>
                          </p>
                          <p class="shelby-footer-block" style="line-height: 1.5;margin: 0;">
                            <%= Settings::Email.shelby_address %>
                          </p>
                        </td>
                      </tr>
                    </table>
                    <!-- // End Module: Standard Content \ -->
                  </td>
                </tr>
              </table>
              <!-- // End Template Body \ -->
            </td>
          </tr>

        </table>
        <br>
      </td>
    </tr>
  </table>
<% end %>