<% standard_html_email_wrapper do %>
  <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" style="margin: 0;padding: 0;background-color: <%= Settings::Email.ui_off_white %>;height: 100%;width: 100%;font-family: <%= Settings::Email.font_family %>; color: <%= Settings::Email.ui_soft_black %>">
    <tbody>
      <tr height="0" valign="top">
        <td>
          <center>
            <!-- main -->
            <table border="0" cellspacing="0" cellpadding="0">
              <tbody>
                <%=
                  render  :partial => "/objects/summary_text",
                          :locals => { :text => "#{@user_from_name} liked #{@frame_title}" }
                %>

                <%= render :partial => "/objects/header" %>

                <tr>
                  <td>
                    <table border="0" cellpadding="0" cellspacing="0" height="300" width="100%">
                      <tr>
                        <td>&nbsp;</td>
                        <td style="width: <%= Settings::Email.main_column %>; background-color: <%= Settings::Email.ui_white %>; border: 1px solid <%= Settings::Email.ui_inset %>; font-weight: <%= Settings::Email.font_weight %>">
                          <center>
                            <table border="0" cellspacing="0" cellpadding="40">
                              <tr>
                                <td>
                                    <!-- BODY -->

                                    <center>
                                      <% if @user_from %>

                                        <p style="color: <%= Settings::Email.ui_soft_black %>; font-family: <%= Settings::Email.font_family %>; font-size: <%= Settings::Email.font_size_large %>; font-weight: <%= Settings::Email.font_weight %>; line-height: 1.231;">
                                          ...and they liked it too!
                                        </p>

                                        <a href="<%= @user_permalink %>" style="color: <%= Settings::Email.ui_soft_black %>">
                                          <%= @frame_title %>
                                        </a>

                                        <a href="<%= @user_permalink %>" style="text-decoration:none;color: <%= Settings::Email.ui_soft_black %>">
                                          <p style="color: <%= Settings::Email.ui_off_white %>; font-family: <%= Settings::Email.font_family %>; font-size: <%= Settings::Email.font_size_large %>; font-weight: <%= Settings::Email.font_weight %>; line-height: 1.231;border-radius:5px;border:1px solid <%= Settings::Email.ui_soft_black %>;padding: 10px; background-color: <%= Settings::Email.ui_green %>">

                                              See what else <%= @user_from_name %> likes

                                          </p>
                                        </a>
                                      <% else %>
                                        <a href="<%= Settings::Email.web_url_base %>/stream" style="text-decoration:none;color: <%= Settings::Email.ui_soft_black %>">
                                          <p style="color: <%= Settings::Email.ui_off_white %>; font-family: <%= Settings::Email.font_family %>; font-size: <%= Settings::Email.font_size_large %>; font-weight: <%= Settings::Email.font_weight %>; line-height: 1.231;border-radius:5px;border:1px solid <%= Settings::Email.ui_soft_black %>;padding: 10px; background-color: <%= Settings::Email.ui_green %>">

                                              Find more awesome video

                                          </p>
                                        </a>
                                      <% end %>
                                    </center>

                                    <!-- END BODY -->
                                </td>
                              </tr>
                            </table>
                          </center>
                        </td>
                        <td>&nbsp;</td>
                      </tr>
                    </table>
                  </td>
                </tr>

                <%= render :partial => "/objects/footer" %>
              </tbody>
            </table>
            <!-- eo main -->
          </center>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
