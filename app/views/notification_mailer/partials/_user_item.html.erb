<table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td style="<%= "width: #{size}" %>">
      <a href="<%= url %>" style="<%= "color: #{Settings::Email.ui_black}; font-family: #{Settings::Email.font_family}; text-decoration: none;" %>">
        <img src="<%= avatar %>" style="width: 100%; border: 0; border-radius: 3px;" />
      </a>
    </td>

    <td valign="middle" style="<%= "font-size: #{size == Settings::Email.user_item.default ? Settings::Email.font_size_medium : Settings::Email.font_size};padding-left: 10px; " %>">
      <a href="<%= url %>" style="<%= "color: #{Settings::Email.ui_black}; font-family: #{Settings::Email.font_family}; text-decoration: none;" %>">
        <strong><%= nickname %></strong><br />
        <span><%= name %></span>
      </a>
    </td>

    <% if button %>
      <td style="<%= "font-size: #{size == Settings::Email.user_item.default ? Settings::Email.font_size_medium : Settings::Email.font_size};width: 33.3333% " %>">
        <%= render :partial => '/notification_mailer/partials/green_button',
            :locals => {
              :text => "See Profile",
              :url => url,
              :width => "auto"
            }
        %>
      </td>
    <% end %>
  </tr>
</table>
