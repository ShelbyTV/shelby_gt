<table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td style="width: 60px">
      <a href="<%= url %>" style="<%= "color: #{Settings::Email.ui_black}; font-family: #{Settings::Email.font_family}; text-decoration: none;" %>">
        <img src="<%= avatar %>" style="width: 50px; border: 0; border-radius: 3px;" />
      </a>
    </td>

    <td valign="middle">
      <a href="<%= url %>" style="<%= "color: #{Settings::Email.ui_black}; font-family: #{Settings::Email.font_family}; text-decoration: none;" %>">
        <strong><%= nickname %></strong><br />
        <span><%= name %></span>
      </a>
    </td>
  </tr>
</table>
