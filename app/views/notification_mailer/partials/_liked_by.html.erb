<table border="0" cellpadding="0" cellspacing="10" width="100%" style="margin-top: 10px;">
  <tr>
    <th colspan="2" style="text-align: left;">
      <strong style="<%= "display: block; margin: 0 0 10px; font-size: #{Settings::Email.font_size_large}; " %>">
        Liked by:
      </strong>
    </th>
  </tr>

  <tr>
    <td colspan="2">
      <%= render :partial => '/notification_mailer/partials/user_item',
                 :locals => {
                  :avatar   => avatar_url_for_user(user),
                  :name     => user.name,
                  :nickname => user.nickname,
                  :button   => false,
                  :url      => user.permalink,
                  :size     => Settings::Email.user_item.default
                 }
      %>
    </td>
  </tr>

  <tr>
    <td>
      <p style="<%= "color: #{Settings::Email.ui_light_black}; font-family: #{Settings::Email.font_family}; font-size: #{Settings::Email.font_size_micro};" %>">
        See what else mfeldz1980 likes
      </p>
    </td>
    <td>
      <%= render :partial => '/notification_mailer/partials/green_button',
                 :locals => {
                    :text => "See Profile",
                    :url => user.permalink,
                    :width => "auto"
                 }
       %>
    </td>
  </tr>
</table>
